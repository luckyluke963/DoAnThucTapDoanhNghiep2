<!DOCTYPE HTML>
<head>
    <title>Website bán đồ công nghệ</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href="~/Scripts/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-social.css" rel="stylesheet" />
    <link href="~/Scripts/User/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Scripts/Bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Scripts/User/css/jquery-ui.css" rel="stylesheet" />
    <link href="~/Scripts/User/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Scripts/User/css/slider.css" rel="stylesheet" type="text/css" media="all" />

   
    <script src="~/Scripts/User/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/User/js/jquery-ui.js"></script>
    <script src="~/Scripts/Bootstrap/js/bootstrap.min.js"></script>


    @*<script type="text/javascript" src="~/Scripts/User/js/jquery-1.7.2.min.js"></script>*@
    <script type="text/javascript" src="~/Scripts/User/js/move-top.js"></script>
    <script type="text/javascript" src="~/Scripts/User/js/easing.js"></script>
    <script type="text/javascript" src="~/Scripts/User/js/startstop-slider.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                @{ Html.RenderAction("TopMenu", "Home");}
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/" rel="nofollow"><img src="~/Scripts/User/images/logo.png" alt="" /></a>
                </div>
               @{ Html.RenderAction("HeaderCart", "Home");}
                <script type="text/javascript">
    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });</script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
               @{ Html.RenderAction("MainMenu", "Home");}
                <div class="search_box">
                    <form action="/tim-kiem" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Gõ từ khoá"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>

            @RenderSection("slide",required:false)
          
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        @{ Html.RenderAction("Footer", "Home");}
    </div>
    <script type="text/javascript">
    $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });</script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    <script src="~/Content/controller/baseController.js"></script>
    @RenderSection("jsFooter", required: false);
</body>
</html>

